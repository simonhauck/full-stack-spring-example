{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "automerge": true
    },
    {
      "groupName": "Kotlin",
      "matchPackageNames": [
        "org.jetbrains.kotlin:kotlin-noarg",
        "org.jetbrains.kotlin:kotlin-allopen",
        "org.jetbrains.kotlin:kotlin-gradle-plugin"
      ]
    }
  ]
}
